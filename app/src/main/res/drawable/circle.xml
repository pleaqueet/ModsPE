<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/white"/>
            <size android:width="25dp" android:height="25dp"/>
            <corners android:radius="18.5dp"/>
        </shape>
    </item>
    <item android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp">
        <shape>
            <corners android:radius="18.5dp" />
            <stroke android:width="2dp" android:color="#E1473D"/>
        </shape>
    </item>
    <item>
        <clip>
            <layer-list>
                <item android:top="5dp"
                    android:bottom="5dp"
                    android:left="5dp"
                    android:right="5dp">
                    <shape>
                        <corners android:radius="18.5dp" />
                        <size android:width="10dp" android:height="10dp"/>
                        <solid android:color="#E1473D"/>
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>


</layer-list>